@model Course_Project.Models.ProfileViewModels.IndexViewModel
@using static Course_Project.Views.Profile.ManageNavPages
@using Course_Project.Models
@{

    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(Course_Project.Views.Profile.ManageNavPages.Index);
}
<h4></h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                            <input asp-for="Email" class="form-control" disabled=@ViewData["Disabled"]/>
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Email" class="form-control" disabled=@ViewData["Disabled"]/>
                    <button asp-action="SendVerificationEmail" class="btn btn-link" style=@ViewData["Hidden"]>Send verification email</button>
                }
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Firstname"></label>
                <input asp-for="Firstname" class="form-control" disabled=@ViewData["Disabled"]/>
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lastname"></label>
                <input asp-for="Lastname" class="form-control" disabled=@ViewData["Disabled"]/>
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" disabled=@ViewData["Disabled"]/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <input asp-for="UserId" type="hidden" name="userId" />
            <button type="submit" class="btn btn-default" style=@ViewData["Hidden"]>Save</button>

        </form>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
