@model Course_Project.Models.PostViewModels.Post
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@using Course_Project.Data
@inject ApplicationDbContext _context
@{
    ViewData["Title"] = Model.Title;

}
<br />
<br />
<div class="article-page container" id="allUp">
    <div class="col-md-12 article-details">
        @Html.Partial("_PostSummary", Model)



        @Html.Raw(Model.Content)

    </div>
    @if (SignInManager.IsSignedIn(User))
    {

        <div class="col-md-12 article-details">
            @Html.Partial("_CommentsBody", Model)
            @Html.Partial("_NewComment", Model)
        </div>
    }
</div>
