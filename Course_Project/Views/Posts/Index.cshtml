@model IEnumerable<Course_Project.Models.PostViewModels.Post>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["News"];
}
<div class="container">
    <ul class="col-md-12 list-unstyled article-list">
        <li class="row">
            @await Component.InvokeAsync("LatestPosts", new { howMany = 15 })
        </li>
    </ul>
</div>
